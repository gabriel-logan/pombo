<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/bundles/output.css">
</head>

<body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="flex flex-col w-full max-w-2xl h-full bg-white shadow-lg rounded-lg overflow-hidden">

        <!-- Header -->
        <div class="bg-blue-500 text-white p-4 flex items-center justify-between">
            <h2 class="font-semibold text-lg">Chat</h2>
            <span class="text-sm opacity-75">Online</span>
        </div>

        <!-- Chat Area -->
        <div id="chat" class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50">
            <!-- Mensagem do outro -->
            <div class="flex">
                <div class="bg-white p-3 rounded-lg shadow max-w-xs">
                    <p class="text-gray-800 text-sm">Olá! Como você está?</p>
                    <span class="text-gray-400 text-xs block mt-1">10:00 AM</span>
                </div>
            </div>

            <!-- Sua mensagem -->
            <div class="flex justify-end">
                <div class="bg-blue-500 text-white p-3 rounded-lg shadow max-w-xs">
                    <p class="text-sm">Estou bem! E você?</p>
                    <span class="text-gray-200 text-xs block mt-1 text-right">10:01 AM</span>
                </div>
            </div>

            <!-- Mensagem do outro -->
            <div class="flex">
                <div class="bg-white p-3 rounded-lg shadow max-w-xs">
                    <p class="text-gray-800 text-sm">Tudo certo por aqui!</p>
                    <span class="text-gray-400 text-xs block mt-1">10:02 AM</span>
                </div>
            </div>
        </div>

        <!-- Input Area -->
        <div class="p-4 border-t border-gray-200 flex items-center space-x-3">
            <input type="text" placeholder="Digite uma mensagem..."
                class="flex-1 border rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
            <button class="bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600 transition">Enviar</button>
        </div>

    </div>

    <script src="/bundles/main.iife.js"></script>
</body>

</html>
